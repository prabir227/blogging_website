<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Blog Page</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <%- include('./partials/script.ejs') %>
    <div class = "contsiner mt-3">
        <form action="/blog/" method="post" enctype="multipart/form-data">
            <div class="container mb-3">
                <label for="coverImage" class = "form-label" > Cover Image</label>
                <input type="file" class = "form-control" id = "coverImage" name = "coverImage" aria-describedby="coverImage">
            </div>
            <div class="container mb-3">
                <label for="title" class = "form-label" > Title</label>
                <input type="text" class = "form-control" id = "title" name = "title" aria-describedby="title">
            </div>
            <div class="container mb-3">
                <label for="body">Body</label>
                <textarea class="form-control" placeholder="Add the body here" id="body" name = "body" style="height: 100px"></textarea>
            </div>
            <div class="container mb-3">
            <button class = "btn btn-primary">
                Submit
            </button>
            </div>
        </form>
        

    </div>
</body>
</html>