<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/script.ejs') %>
    <%- include('./partials/nav.ejs') %>
    <div class = "container">
        <h1>
            <%= blog.title %>
        </h1>
        
        
    </div>
    <div class = "container mt-3">
        <img src="<%= blog.coverImageURL %>" alt="" style="width: 700px">
    </div>
    <div class ="container mt-3">
        <pre style="white-space: pre-wrap; word-wrap: break-word;">
            <%= blog.body %>
            </pre>
            
        
    </div>
    <div class = "container mb-3">
        <img src="<%= blog.author.profileImageURL %>" alt="" style = "width: 70px;">
        <span> <%= blog.author.name %></span>
    </div>
    <div class="container mt-3">
    <h1>
        Comments (<%= comments.length %>)
    </h1>
    <% comments.forEach(comment => { %>
        <div class="container mt-3">
            <img src="<%= comment.author.profileImageURL %>" alt="" style = "width: 50px;">
            <span> <%= comment.author.name %></span>
            <br>
            <p>
                <%= comment.comment %>
            </p>
        </div>
    <% }) %>
</div>
    <% if (locals.user) { %>
    <form action="comment/<%= blog._id %>" method="post">
    <div class="container">
        
        
        <div class="container mb-3">
            <input type="text" class = "form-control" name = "comment" aria-describedby="comment" placeholder="write your comment here">
        </div>
        <button type="submit" class ="btn btn-primary">
            Add
        </button>
    </div>
    </form>
    <% } %>
</body>
</html>